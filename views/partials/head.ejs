<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= data.empresa %> - Especialistas em óculos de proteção e EPIs para empresas e pessoas">
    <meta name="keywords" content="óculos de proteção, EPI, óculos de grau, óculos de sol, optometria, São José SC">
    <title><%= data.empresa %> - Óculos de Proteção e EPIs</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/public/images/favicon.png">

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Custom Animations CSS -->
    <link rel="stylesheet" href="/public/css/animations.css">

    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1e40af',
                        secondary: '#3b82f6',
                    },
                    animation: {
                        'fade-in-up': 'fadeInUp 0.6s ease-out forwards',
                        'zoom-out': 'zoomOut 8s ease-out forwards',
                        'zoom-out-mobile': 'zoomOutMobile 8s ease-out forwards',
                    },
                    keyframes: {
                        fadeInUp: {
                            '0%': { opacity: '0', transform: 'translateY(20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' }
                        },
                        zoomOut: {
                            '0%': { transform: 'scale(1.2)' },
                            '100%': { transform: 'scale(1.0)' }
                        },
                        zoomOutMobile: {
                            '0%': { transform: 'scale(1.8)' },
                            '100%': { transform: 'scale(1.0)' }
                        }
                    }
                }
            }
        }
    </script>

    <style>
        /* Glass effect */
        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Text shadow */
        .text-shadow {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
