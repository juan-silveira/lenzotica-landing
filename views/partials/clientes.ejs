<!-- ============================================ -->
<!-- CLIENTES - Principais empresas atendidas     -->
<!-- ============================================ -->
<section id="clientes" class="py-16 md:py-24 bg-gray-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 md:mb-16 scroll-animate fade-up">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Empresas que Confiam em Nós</h2>
            <p class="text-lg md:text-xl text-gray-600 max-w-4xl mx-auto">
                Parceiros que priorizam a segurança e bem-estar de seus colaboradores.
            </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 md:gap-8 stagger-children">
            <% data.clientes.forEach(cliente => { %>
                <% if (cliente.url) { %>
                    <a href="<%= cliente.url %>" target="_blank" class="bg-white p-6 rounded-xl shadow-md hover-glow flex items-center justify-center group border-2 border-transparent hover:border-cyan-400">
                        <% if (cliente.logo) { %>
                            <img src="/<%= cliente.logo %>" alt="<%= cliente.nome %>" class="h-16 md:h-20 w-auto object-contain group-hover:scale-110 transition">
                        <% } else { %>
                            <span class="text-xl md:text-2xl font-bold text-gray-800 group-hover:text-cyan-600 transition"><%= cliente.nome %></span>
                        <% } %>
                    </a>
                <% } else { %>
                    <div class="bg-white p-6 rounded-xl shadow-md flex items-center justify-center border-2 border-transparent">
                        <% if (cliente.logo) { %>
                            <img src="/<%= cliente.logo %>" alt="<%= cliente.nome %>" class="h-16 md:h-20 w-auto object-contain">
                        <% } else { %>
                            <span class="text-xl md:text-2xl font-bold text-gray-800"><%= cliente.nome %></span>
                        <% } %>
                    </div>
                <% } %>
            <% }); %>
        </div>
    </div>
</section>
