<!-- ============================================ -->
<!-- CAROUSEL 2 - Estilo 3D com perspectiva       -->
<!-- ============================================ -->
<section class="relative py-20 md:py-32 bg-gray-900 overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Título -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
                <%= data.empresa %>
            </h2>
            <p class="text-xl text-gray-300">A Visão da Segurança Industrial</p>
        </div>

        <!-- Carousel Container -->
        <div class="relative h-[400px] md:h-[450px] max-w-6xl mx-auto flex items-center justify-center perspective-container">
            <!-- Carousel Items -->
            <div id="carousel2-track" class="relative w-full h-full flex items-center justify-center">
                <% data.produtos.forEach((produto, index) => { %>
                    <div class="carousel2-item absolute transition-all duration-700 ease-out opacity-0 pointer-events-none group"
                         data-index="<%= index %>"
                         style="transform: translateX(0) scale(0.8) rotateY(0deg);">

                        <!-- Imagem do Produto -->
                        <div class="relative w-80 h-64 md:w-[500px] md:h-[350px] rounded-2xl overflow-hidden shadow-2xl">
                            <img src="/<%= produto.imagem %>"
                                 alt="<%= produto.titulo %>"
                                 class="w-full h-full object-cover">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>

                            <!-- Card Info (slide up no hover - desktop only) -->
                            <div class="hidden md:block absolute inset-x-0 bottom-0 translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out bg-white rounded-t-2xl p-6 shadow-2xl">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">
                                    <%= produto.titulo %>
                                </h3>
                                <p class="text-gray-600 text-sm mb-4">
                                    <%= produto.descricao %>
                                </p>
                                <a href="https://wa.me/<%= data.whatsapp %>?text=Ol%C3%A1%21%20Gostaria%20de%20saber%20mais%20sobre%20<%= encodeURIComponent(produto.titulo) %>."
                                   class="inline-block bg-gradient-to-r from-blue-600 to-blue-700 text-white px-4 py-2 rounded-full text-sm font-semibold hover:from-blue-700 hover:to-blue-800 transition">
                                    Solicitar Orçamento
                                </a>
                            </div>
                        </div>

                        <!-- Card Info Mobile (modal ao clicar) -->
                        <div class="carousel2-info-mobile md:hidden hidden fixed inset-0 z-50 flex items-center justify-center bg-black/70 backdrop-blur-sm"
                             onclick="toggleCarousel2InfoMobile(<%= index %>)">
                            <div class="bg-white rounded-2xl p-8 max-w-md mx-4 text-center shadow-2xl transform scale-95"
                                 onclick="event.stopPropagation()">
                                <button onclick="toggleCarousel2InfoMobile(<%= index %>)"
                                        class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 transition">
                                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                </button>
                                <h3 class="text-2xl font-bold text-gray-900 mb-3">
                                    <%= produto.titulo %>
                                </h3>
                                <p class="text-gray-600 mb-6">
                                    <%= produto.descricao %>
                                </p>
                                <a href="https://wa.me/<%= data.whatsapp %>?text=Ol%C3%A1%21%20Gostaria%20de%20saber%20mais%20sobre%20<%= encodeURIComponent(produto.titulo) %>."
                                   class="inline-block bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-full font-semibold hover:from-blue-700 hover:to-blue-800 transition">
                                    Solicitar Orçamento
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- Navigation Arrows -->
            <button id="carousel2-prev"
                    class="absolute left-4 md:left-8 z-10 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white p-4 rounded-full transition transform hover:scale-110">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>

            <button id="carousel2-next"
                    class="absolute right-4 md:right-8 z-10 bg-white/10 backdrop-blur-sm hover:bg-white/20 text-white p-4 rounded-full transition transform hover:scale-110">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>

        <!-- Counter -->
        <div class="text-center mt-8">
            <div class="inline-flex items-center space-x-4">
                <button id="carousel2-play" class="text-white hover:text-blue-400 transition">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"></path>
                    </svg>
                </button>
                <span class="text-white text-lg font-medium">
                    <span id="carousel2-current">1</span> / <span id="carousel2-total"><%= data.produtos.length %></span>
                </span>
            </div>
        </div>
    </div>
</section>

<style>
.perspective-container {
    perspective: 1500px;
}

.carousel2-item.active {
    opacity: 1 !important;
    z-index: 3 !important;
    pointer-events: auto !important;
    transform: translateX(0) scale(1) rotateY(0deg) !important;
}

.carousel2-item.left-1 {
    opacity: 0.7;
    z-index: 2;
    transform: translateX(-280px) scale(0.85) rotateY(15deg) !important;
}

.carousel2-item.left-2 {
    opacity: 0.4;
    z-index: 1;
    transform: translateX(-480px) scale(0.7) rotateY(25deg) !important;
}

.carousel2-item.right-1 {
    opacity: 0.7;
    z-index: 2;
    transform: translateX(280px) scale(0.85) rotateY(-15deg) !important;
}

.carousel2-item.right-2 {
    opacity: 0.4;
    z-index: 1;
    transform: translateX(480px) scale(0.7) rotateY(-25deg) !important;
}
</style>

<script>
function toggleCarousel2InfoMobile(index) {
    const item = document.querySelector(`.carousel2-item[data-index="${index}"]`);
    const info = item.querySelector('.carousel2-info-mobile');
    info.classList.toggle('hidden');
}

(function() {
    // Adicionar click handler no mobile para os itens ativos
    document.addEventListener('click', function(e) {
        const item = e.target.closest('.carousel2-item.active');
        if (item && window.innerWidth < 768) {
            const index = item.getAttribute('data-index');
            toggleCarousel2InfoMobile(index);
        }
    });
    const items = document.querySelectorAll('.carousel2-item');
    const totalItems = items.length;
    let currentIndex = 0;
    let autoplayInterval;

    function updateCarousel() {
        items.forEach((item, index) => {
            item.classList.remove('active', 'left-1', 'left-2', 'right-1', 'right-2');

            const diff = index - currentIndex;

            if (diff === 0) {
                item.classList.add('active');
            } else if (diff === -1 || diff === totalItems - 1) {
                item.classList.add('left-1');
            } else if (diff === -2 || diff === totalItems - 2) {
                item.classList.add('left-2');
            } else if (diff === 1 || diff === -(totalItems - 1)) {
                item.classList.add('right-1');
            } else if (diff === 2 || diff === -(totalItems - 2)) {
                item.classList.add('right-2');
            }
        });

        document.getElementById('carousel2-current').textContent = currentIndex + 1;
    }

    function next() {
        currentIndex = (currentIndex + 1) % totalItems;
        updateCarousel();
    }

    function prev() {
        currentIndex = (currentIndex - 1 + totalItems) % totalItems;
        updateCarousel();
    }

    function startAutoplay() {
        stopAutoplay();
        autoplayInterval = setInterval(next, 5000);
        document.getElementById('carousel2-play').innerHTML = '<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"></path></svg>';
    }

    function stopAutoplay() {
        if (autoplayInterval) {
            clearInterval(autoplayInterval);
            autoplayInterval = null;
        }
        document.getElementById('carousel2-play').innerHTML = '<svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"></path></svg>';
    }

    document.getElementById('carousel2-prev').addEventListener('click', () => {
        prev();
        stopAutoplay();
    });

    document.getElementById('carousel2-next').addEventListener('click', () => {
        next();
        stopAutoplay();
    });

    document.getElementById('carousel2-play').addEventListener('click', function() {
        if (autoplayInterval) {
            stopAutoplay();
        } else {
            startAutoplay();
        }
    });

    // Inicializar
    updateCarousel();
    startAutoplay();

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
            prev();
            stopAutoplay();
        } else if (e.key === 'ArrowRight') {
            next();
            stopAutoplay();
        }
    });
})();
</script>
